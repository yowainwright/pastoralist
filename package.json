{
  "name": "pastoralist",
  "version": "0.1.8",
  "description": "A tool to watch over node module resolutions and overrides 🐑 👩🏽‍🌾",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "pastoralist": "./dist/index.js"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build-packages",
    "build-packages": "pnpm run build-dist && pnpm run build-docs",
    "build-dist": "tsc",
    "build-docs": "pnpm --filter './app/**' app-build",
    "clean-dist": "rimraf dist",
    "clean": "pnpm clean-dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dev": "pnpm --filter './app/**' app-dev",
    "husky-setup:commit-msg": "(path-exists .husky/commit-msg) || (npx husky add .husky/commit-msg 'pnpm run commit-msg')",
    "husky-setup:post-merge": "(path-exists .husky/post-merge) || (npx husky add .husky/post-merge 'pnpm install && pnpm run build')",
    "husky-setup:pre-commit": "(path-exists .husky/pre-commit) || (npx husky add .husky/pre-commit 'pnpm run pre-commit')",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "pre-commit": "lint-staged --quiet && pnpm run test",
    "prepare": "is-ci || (husky install && pnpm run husky-setup:commit-msg; pnpm run husky-setup:post-merge; pnpm run husky-setup:pre-commit)",
    "prepublishOnly": "pnpm run test && npm run build",
    "preview": "pnpm --filter './app/**' app-preview",
    "release": "release-it",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/pastoralist.git"
  },
  "keywords": [
    "resolutions",
    "overrides",
    "dependencies",
    "security",
    "dependency-management",
    "yarn",
    "pnpm"
  ],
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/pastoralist/issues"
  },
  "homepage": "https://github.com/yowainwright/pastoralist#readme",
  "dependencies": {
    "commander": "^9.4.0",
    "compare-versions": "^4.1.3",
    "fast-glob": "^3.2.11",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "path-exists-cli": "^2.0.0",
    "release-it": "^15.2.0",
    "rimraf": "^3.0.2",
    "stdouttojson": "^0.3.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.20.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
