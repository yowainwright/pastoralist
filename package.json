{
  "name": "pastoralist",
  "version": "0.1.10",
  "description": "A tool to watch over node module resolutions and overrides ğŸ‘ ğŸ‘©ğŸ½â€ğŸŒ¾",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "pastoralist": "./dist/index.js"
  },
  "scripts": {
    "build": "turbo run build-dist",
    "build-dist": "tsc",
    "clean-dist": "rimraf dist",
    "clean": "turbo run clean-dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dev": "pnpm --filter @pastoralist/app run app-dev",
    "husky-setup:commit-msg": "(path-exists .husky/commit-msg) || (npx husky add .husky/commit-msg 'pnpm run commit-msg')",
    "husky-setup:post-merge": "(path-exists .husky/post-merge) || (npx husky add .husky/post-merge 'pnpm install && pnpm run build')",
    "husky-setup:pre-commit": "(path-exists .husky/pre-commit) || (npx husky add .husky/pre-commit 'pnpm run pre-commit')",
    "lint": "turbo run lint-src",
    "lint-fix": "eslint . --fix",
    "lint-src": "eslint src --ext .ts",
    "pre-commit": "lint-staged --quiet && pnpm run test",
    "prepare": "is-ci || (husky install && pnpm run husky-setup:commit-msg; pnpm run husky-setup:post-merge; pnpm run husky-setup:pre-commit)",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "preview": "pnpm --filter @pastoralist/app app-preview",
    "release": "release-it",
    "test": "turbo run test-src",
    "test-src": "vitest run",
    "typecheck": "turbo run typecheck-src",
    "typecheck-src": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/pastoralist.git"
  },
  "keywords": [
    "resolutions",
    "overrides",
    "dependencies",
    "security",
    "dependency-management",
    "yarn",
    "pnpm"
  ],
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/pastoralist/issues"
  },
  "homepage": "https://jeffry.in/pastoralist/",
  "dependencies": {
    "commander": "^9.4.0",
    "compare-versions": "^5.0.1",
    "fast-glob": "^3.2.11",
    "react-icons": "^4.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "path-exists-cli": "^2.0.0",
    "prettier": "^2.7.1",
    "release-it": "^15.4.1",
    "rimraf": "^3.0.2",
    "stdouttojson": "^0.7.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "turbo": "^1.4.6",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "vitest": "^0.24.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
