{
  "name": "pastoralist",
  "version": "0.1.7",
  "description": "A tool to watch over node module resolutions and overrides 🐑 👩🏽‍🌾",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "pastoralist": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && npm run dist",
    "clean": "rm -rf dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dist": "tsc",
    "husky-setup:commit-msg": "(path-exists .husky/commit-msg) || (npx husky add .husky/commit-msg 'npm run commit-msg')",
    "husky-setup:post-merge": "(path-exists .husky/post-merge) || (npx husky add .husky/post-merge 'npm install && npm run build')",
    "husky-setup:pre-commit": "(path-exists .husky/pre-commit) || (npx husky add .husky/pre-commit 'npm run pre-commit')",
    "pre-commit": "lint-staged --quiet && npm run test",
    "prepare": "is-ci || (husky install && npm run husky-setup:commit-msg --silent; npm run husky-setup:post-merge --silent; npm run husky-setup:pre-commit --silent)",
    "prepublishOnly": "npm run test && npm run build",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/pastoralist.git"
  },
  "keywords": [
    "resolutions",
    "overrides",
    "dependencies",
    "security",
    "dependency-management",
    "yarn",
    "pnpm"
  ],
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/pastoralist/issues"
  },
  "homepage": "https://github.com/yowainwright/pastoralist#readme",
  "dependencies": {
    "commander": "^9.2.0",
    "compare-versions": "^4.1.3",
    "fast-glob": "^3.2.11",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.4.1",
    "path-exists-cli": "^2.0.0",
    "release-it": "^15.0.0",
    "stdouttojson": "^0.3.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vitest": "^0.14.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  }
}
