{
  "name": "pastoralist",
  "version": "1.1.12-beta.0",
  "description": "A tool to watch over node module resolutions and overrides 🐑 👩🏽‍🌾",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "pastoralist": "./dist/index.js"
  },
  "scripts": {
    "build": "turbo run build-dist",
    "build-dist": "tsc",
    "clean-dist": "rimraf dist",
    "clean": "turbo run clean-dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dev": "pnpm --filter @pastoralist/app run app-dev",
    "lint": "turbo run lint-src",
    "lint-fix": "eslint . --fix",
    "lint-src": "eslint src --ext .ts",
    "pre-commit": "lint-staged --quiet && pnpm run test",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "preview": "pnpm --filter @pastoralist/app app-preview",
    "release": "release-it",
    "test": "turbo run test-src",
    "test-src": "jest --coverage --maxWorkers=75%",
    "typecheck": "turbo run typecheck-src",
    "typecheck-src": "tsc --noEmit",
    "update": "codependence --update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/pastoralist.git"
  },
  "keywords": [
    "resolutions",
    "overrides",
    "dependencies",
    "security",
    "dependency-management",
    "yarn",
    "pnpm"
  ],
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/pastoralist/issues"
  },
  "homepage": "https://jeffry.in/pastoralist/",
  "dependencies": {
    "commander": "12.0.0",
    "compare-versions": "6.1.0",
    "fast-glob": "3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.7",
    "@types/node": "20.12.4",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "codependence": "^0.2.6",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "15.2.2",
    "path-exists-cli": "^2.0.0",
    "prettier": "3.2.5",
    "release-it": "17.1.1",
    "rimraf": "5.0.5",
    "stdouttojson": "1.0.0",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "tsup": "8.0.2",
    "turbo": "1.13.2",
    "typescript": "5.4.4",
    "vite": "5.2.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(js|ts)$": "@swc/jest"
    },
    "testRegex": "(src/__tests__/.*|(\\.|/)(test))\\.(ts?)$",
    "testEnvironment": "jest-environment-node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release"
    }
  },
  "engines": {
    "pnpm": ">=8.0.0"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
