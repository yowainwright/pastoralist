---
const features = [
  {
    title: "One Command",
    description: "Update all your overrides, resolutions, and patches with a single command.",
    icon: "../../../icons/fast.png",
  },
  {
    title: "Auto Updates",
    description: "Automatically keeps your dependency overrides in sync with the latest versions.",
    icon: "../../../icons/features.png",
  },
  {
    title: "Package Manager Support",
    description: "Works seamlessly with npm, yarn, and pnpm package managers.",
    icon: "../../../icons/build.png",
  },
  {
    title: "Smart Detection",
    description: "Intelligently detects and manages overrides, resolutions, and patches.",
    icon: "../../../icons/api.png",
  },
  {
    title: "CI/CD Ready",
    description: "Perfect for continuous integration pipelines to ensure dependencies stay current.",
    icon: "../../../icons/sdk.png",
  },
  {
    title: "Safe Updates",
    description: "Carefully manages updates to prevent breaking changes in your project.",
    icon: "../../../icons/error.png",
  },
];
---

<div
  class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10 justify-items-center py-20 lg:py-28"
>
  {
    features.map((features) => (
      <div class="card max-w-2xl bg-gradient-to-t from-base-100 to-base-300/50 border border-base-content/20 hover:border-base-content/40 transition">
        <div class="card-body font-outfit">
          <div class="h-16 w-16 bg-base-300 rounded-full">
            <img
              class="w-20 h-16 p-4"
              src={features.icon}
              alt={features.title}
            />
          </div>
          <h2 class="card-title">{features.title}</h2>
          <p>{features.description}</p>
        </div>
      </div>
    ))
  }
</div>
