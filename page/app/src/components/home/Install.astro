---
import { CopyButton } from "../common/CopyButton";
---

<div
  class="hero bg-base-100 text-base-content mx-auto py-28 max-w-md md:max-w-full"
>
  <div class="hero-content text-center">
    <div class="w-full max-w-xl font-outfit">
      <h1 class="text-2xl md:text-5xl font-bold">
        Install <span class="text-primary">Pastoralist</span>
      </h1>

      <p class="mt-5 w-full max-w-lg text-start">
        Install pastoralist as a global npm package
      </p>
      <div
        class="flex items-center bg-base-300 rounded-lg shadow-sm mt-4 justify-between"
      >
        <code class="ml-4">npm i -g pastoralist</code>
        <CopyButton client:only="react" />
      </div>

      <a href="/documentation/setup">
        <button class="btn btn-primary mt-7">Setup guide</button>
      </a>
    </div>
  </div>
</div>
