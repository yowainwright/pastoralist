{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [{ "name": "Install", "command": "npm install" }],
  "tasks": {
    "demo": {
      "name": "Run Monorepo Demo",
      "command": "npm run demo",
      "runAtStart": true
    },
    "dry-run": {
      "name": "Run Monorepo (Dry Run)",
      "command": "npm run demo:dry"
    },
    "summary": {
      "name": "Show Monorepo Summary",
      "command": "npm run demo:summary"
    }
  }
}
