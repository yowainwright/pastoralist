{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [{ "name": "Install", "command": "npm install" }],
  "tasks": {
    "demo": {
      "name": "Setup Postinstall Hook",
      "command": "npm run demo",
      "runAtStart": true
    },
    "dry-run": {
      "name": "Setup Hook (Dry Run)",
      "command": "npm run demo:dry"
    },
    "show-scripts": {
      "name": "Show Package Scripts",
      "command": "npm run show-scripts"
    }
  }
}
