{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"rootDir": "src",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["esnext", "dom", "es6", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "esnext",
		"types": ["node"]
	},
	"include": ["src", "tests/scripts.test.ts"],
	"exclude": ["src/__tests__/*.ts", "app/**/*", "dist", "tests"]
}
