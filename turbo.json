{
  "$schema": "https://turborepo.org/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build-dist": {
      "dependsOn": ["^build-dist"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json"],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "//#build-dist": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "lint": {
      "cache": true,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true,
      "outputs": []
    },
    "typecheck-src": {
      "inputs": ["src/**/*.ts"],
      "cache": true,
      "outputs": []
    },
    "//#typecheck-src": {
      "inputs": ["src/**/*.ts"],
      "cache": true,
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
